{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node16",
    "typeRoots": [
      "./node_modules/@types",
      "./typechain-types"
    ],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": [
    "./scripts",
    "./test",
    "./ignition",
    "./typechain-types",
    "./hardhat.config.ts"
  ]
}
