{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "@nomicfoundation/hardhat-ignition"]
    
  },
  "include": ["hardhat.config.ts", "ignition/modules/**/*", "scripts/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
