{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": [
    "./contracts",
    "./scripts",
    "./test",
    "./typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
