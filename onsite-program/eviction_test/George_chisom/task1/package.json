{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/node": "^24.3.0",
    "hardhat": "^2.26.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.1"
  },
  "description": "This project demonstrates a basic Hardhat use case. It comes with a sample contract, a test for that contract, and a Hardhat Ignition module that deploys that contract.",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy-lisk": "hardhat run scripts/deploy-lisk.ts --network lisk",
    "deploy-ignition": "hardhat ignition deploy ./ignition/modules/Lottery.ts",
    "deploy-ignition-lisk": "hardhat ignition deploy ./ignition/modules/Lottery.ts --network lisk",
    "interact": "hardhat run scripts/deploy-and-interact.ts",
    "verify-lisk": "hardhat run scripts/verify.ts --network lisk"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
