{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"types": ["node", "hardhat"],
		"outDir": "dist"
	},
	"include": [
		"./scripts",
		"./test",
		"./hardhat.config.ts",
		"./contracts/**/*.sol"
	]
} 